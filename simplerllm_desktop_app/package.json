{
  "name": "simplerllm-playground",
  "version": "1.0.0",
  "description": "Desktop playground for testing SimplerLLM library functionalities",
  "main": "electron/main.js",
  "author": "SimplerLLM",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "start:dev": "concurrently \"cd backend && python app.py\" \"electron .\"",
    "setup-python": "node scripts/setup-python.js",
    "build": "npm run setup-python && electron-builder",
    "build:win": "npm run setup-python && electron-builder --win",
    "build:mac": "npm run setup-python && electron-builder --mac",
    "build:linux": "npm run setup-python && electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "concurrently": "^8.2.0",
    "adm-zip": "^0.5.10"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}
