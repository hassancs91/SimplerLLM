{
  "name": "simplerllm-image-tools",
  "version": "1.0.0",
  "description": "AI-powered desktop app for image generation, editing, and creative transformations",
  "main": "electron/main.js",
  "author": "SimplerLLM <https://simplerllm.com>",
  "license": "MIT",
  "homepage": "https://simplerllm.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/hassancs91/SimplerLLM"
  },
  "scripts": {
    "start": "electron .",
    "start:dev": "concurrently \"cd backend && python app.py\" \"electron .\"",
    "setup-python": "node scripts/setup-python.js",
    "build": "npm run setup-python && electron-builder",
    "build:win": "npm run setup-python && electron-builder --win",
    "build:mac": "npm run setup-python && electron-builder --mac",
    "build:linux": "npm run setup-python && electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "concurrently": "^8.2.0",
    "adm-zip": "^0.5.10"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}
